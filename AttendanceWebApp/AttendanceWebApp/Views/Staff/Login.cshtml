@model AttendanceWebApp.Models.Lecturer

@{
    ViewBag.Title = "Login";
}


<div class="container mt-5 pt-5">
    <div class="row justify-content-center align-items-center">
        <div class="card animated bounceInDown delay-3s" style="width: 30rem; height: 25rem;">
            <div class="card-header text-dark">
                <h2>Staff Login</h2>
            </div>
            <div class="card-body mt-5">
                <div class="card-text  text-dark">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">  
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group  d-flex align-content-center justify-content-lg-center">
                                @Html.LabelFor(model => model.lecturer_email, htmlAttributes: new { @class = "control-label " })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.lecturer_email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.lecturer_email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group  d-flex align-content-center justify-content-lg-center">
                                @Html.LabelFor(model => model.lecturer_password, htmlAttributes: new { @class = "control-label " })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.lecturer_password, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.lecturer_password, "", new { @class = "text-danger" })
                                </div>
                            </div> 
                                <div class="form-group d-flex justify-content-center align-items-center">
                                    <input type="submit" value="Login" class="btn btn-sm btn-dark-green" />
                                </div> 
                        </div>
                    }
                    
                </div>
            </div>
        </div>
    </div>
</div>
