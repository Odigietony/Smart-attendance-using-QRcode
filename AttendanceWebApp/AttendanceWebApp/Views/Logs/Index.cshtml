@model IEnumerable<AttendanceWebApp.Models.Attendance>

@{

    ViewBag.Title = "Index";
}

<div class="view">
    <div class=" mt-5 pt-5 container d-flex justify-content-center align-content-center">
        <table class="table table-bordered dataTables_length bs-select" id="dtBasicExample">
            <thead>
                <tr class="white-text">
                    <th>
                        @Html.DisplayNameFor(model => model.attendance_percentage)
                        <i class="ui-sortable-column-icon fa fa-fw fa-sort fa-sort-asc"></i>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.date)
                        <i class="ui-sortable-column-icon fa fa-fw fa-sort fa-sort-asc"></i>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Course.course_code)
                        <i class="ui-sortable-column-icon fa fa-fw fa-sort fa-sort-asc"></i>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student.student_name)
                        <i class="ui-sortable-column-icon fa fa-fw fa-sort fa-sort-asc"></i>
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                 {
                    <tr class="white-text">
                        <td>
                            @Html.DisplayFor(modelItem => item.attendance_percentage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.course_code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.student_name)
                        </td>
                    </tr>
                 }
            </tbody> 
        </table>
    </div>
    
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
}
