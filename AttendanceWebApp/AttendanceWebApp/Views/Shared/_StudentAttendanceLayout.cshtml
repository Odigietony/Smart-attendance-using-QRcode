<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/mdb.css" rel="stylesheet" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <link href="~/Content/css/all.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/addons/datatables.css" rel="stylesheet" />
        <link href="~/Content/addons/datatables.min.css" rel="stylesheet" />*@
    <link href="~/Content/mdb.min.css" rel="stylesheet" />


</head>
<body>
    <nav class="navbar navbar-nav navbar-expand-md navbar-dark fixed-top">
        <div class="container">
            <a href="#" class="navbar-brand">
                @Html.ActionLink("Attendance Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:#C0C0C0" })
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav ml-md-5">
                    <li class="nav-item nav-link">@Html.ActionLink("Home", "Index", "Home", null, new { @style = "color:#C0C0C0" })</li>
                    <li class="nav-item nav-link">@Html.ActionLink("Contact", "Contact", "Home", null, new { @style = "color:#C0C0C0" })</li>
                    <li class="nav-item nav-link">@Html.ActionLink("About", "About", "Home", null, new { @style = "color:#C0C0C0" })</li>
                </ul> 
            </div>
        </div>
    </nav>
    <div class="view" id="intro">
        <div class="mask rgba-black-strong text-center">
            @RenderBody()
            <hr />
            <footer class="fixed-bottom">
                <p>&copy; @DateTime.Now.Year - Attendance Application</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper.min.js")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/Scripts/mdb.min.js"></script>
    <script type="text/javascript" src="~/Scripts/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/addons/datatables.js"></script>
    <script type="text/javascript" src="~/Scripts/addons/datatables.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
