<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/mdb.css" rel="stylesheet" />
    <link href="~/Content/mdb.min.css" rel="stylesheet" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <link href="~/Content/css/all.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/mdb.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-nav navbar-expand-md navbar-dark fixed-top ">
        <div class="container">
            <a href="#" class="navbar-brand">
                @Html.ActionLink("Attendance Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav">
                    <li class="nav-item nav-link ml-5">@Html.ActionLink("Home", "Index", "Admin", null, new { @style = "color:#ffffff" })</li>
                    <li class="nav-item dropdown ml-5">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Registration</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("StaffRegistration", "Admin")"> Staff Registration</a>
                            <a class="dropdown-item" href="@Url.Action("StudentRegistration", "Admin")"> Student Registration </a>
                        </div>
                    </li>
                    <li class="nav-item dropdown ml-5">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Course</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("CourseCreation", "Admin")">Add Courses</a>
                            <a class="dropdown-item" href="@Url.Action("CourseReg", "Admin")"> Assign Couses To Students</a>
                            <a class="dropdown-item" href="@Url.Action("LecturerReg", "Admin")"> Assign Staff to Courses </a>
                        </div>
                    </li>
                    <li class="nav-item dropdown ml-5">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Logs</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Students", "Admin")">View Available Students</a>
                            <a class="dropdown-item" href="@Url.Action("StaffList", "Admin")">View Available Staff</a>
                            <a class="dropdown-item" href="@Url.Action("LecturerRegList", "Admin")">View Course and their Lecturers </a>
                            <a class="dropdown-item" href="@Url.Action("CourseRegList", "Admin")">View Students and their Course </a>
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <div class=" view" id="admin">
        <div class="mask rgba-black-strong text-center">

            @RenderBody()
            <hr />
            <footer class="fixed-bottom">
                <p>&copy; @DateTime.Now.Year - Attendance Application</p>
            </footer>

        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper.min.js")
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <script type="text/javascript" src="~/Scripts/mdb.js"></script>
    <script type="text/javascript" src="~/Scripts/mdb.min.js"></script>
    <script type="text/javascript" src="~/Scripts/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/addons/datatables.js"></script>
    <script type="text/javascript" src="~/Scripts/addons/datatables.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>


